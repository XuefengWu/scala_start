# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Questions.index

# Javascript routing
GET     /assets/javascripts/routes  controllers.Application.javascriptRoutes

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


# Testakers
GET     /testakers                      controllers.Testakers.list(p:Int ?= 0, s:Int ?= 2, f ?= "")
GET     /testakers/new                  controllers.Testakers.create
GET     /testakers/:id                  controllers.Testakers.edit(id:Long)
POST    /testakers/:id                  controllers.Testakers.update(id:Long)
POST    /testakers                      controllers.Testakers.save
POST    /testakers/:id/delete           controllers.Testakers.delete(id:Long)

# Themes
GET     /themes                      controllers.Themes.list(p:Int ?= 0, s:Int ?= 2, f ?= "")
GET     /themes/new                  controllers.Themes.create
GET     /themes/:id                  controllers.Themes.edit(id:Long)
POST    /themes/:id                  controllers.Themes.update(id:Long)
POST    /themes                      controllers.Themes.save
POST    /themes/:id/delete           controllers.Themes.delete(id:Long)
    

# Tags
GET     /tags                      controllers.Tags.list(p:Int ?= 0, s:Int ?= 2, f ?= "")
GET     /tags/new                  controllers.Tags.create
GET     /tags/:id                  controllers.Tags.edit(id:Long)
POST    /tags/:id                  controllers.Tags.update(id:Long)
POST    /tags                      controllers.Tags.save
POST    /tags/:id/delete           controllers.Tags.delete(id:Long)
    

# Questions
GET     /api/q                      controllers.Questions.list(p:Int ?= 0, s:Int ?= 2, f ?= "")
GET     /api/q/:id                  controllers.Questions.show(id:Long)
#POST    /api/q                      controllers.Questions.save
#PUT     /api/q/:id                  controllers.Questions.update(id:Long)
DELETE  /api/q/:id                  controllers.Questions.delete(id:Long)
