# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Questions.index

# Javascript routing
GET     /assets/javascripts/routes  controllers.Application.javascriptRoutes

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


# Testakers
GET     /testakers                      controllers.Testakers.list(p:Int ?= 0, s:Int ?= 2, f ?= "")
GET     /testakers/new                  controllers.Testakers.create
GET     /testakers/:id                  controllers.Testakers.edit(id:Long)
POST    /testakers/:id                  controllers.Testakers.update(id:Long)
POST    /testakers                      controllers.Testakers.save
POST    /testakers/:id/delete           controllers.Testakers.delete(id:Long)
    

# Nodes
GET     /nodes                      controllers.Nodes.list(p:Int ?= 0, s:Int ?= 2, f ?= "")
GET     /nodes/new                  controllers.Nodes.create
GET     /nodes/:id                  controllers.Nodes.edit(id:Long)
POST    /nodes/:id                  controllers.Nodes.update(id:Long)
POST    /nodes                      controllers.Nodes.save
POST    /nodes/:id/delete           controllers.Nodes.delete(id:Long)
    

# Comments
